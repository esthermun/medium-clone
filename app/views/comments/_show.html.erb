<div class="row">
	<div class="col-xs-12 col-md-12">
		<% @post.comments.each do |comment| %>
			<article class="post comment">
				<p class="commenter">
					<span class="avatar-thumb">
						<%= image_tag current_user.profile.avatar.url(:thumb), :class => "avatar-thumb" %> </span>
						<span class="username"><a href="<%= profile_path(current_user.id) %>"><%= current_user.profile.username %></a></span>   
					<!-- <span class="postDate"> commented <%# time_ago_in_words(comment.created_at) %> ago</span> -->
				</p>
				<p> <%= comment.content %> </p>

				<div class="userBtn">
		
					<% if user_signed_in? && current_user.id === comment.user_id %>
					<p>Edit me</p>
						<%# link_to "Edit", edit_post_path, :class => "btn btn-info" %>		
						<%= link_to "Delete", [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"}%>
					<% end %>
				</div>
			</article>
			<hr>	
		<% end %>
	</div>
</div>