
<%= form_for @post, :html => { :multipart => true } do |f| -%>
    <% if @post.errors.any? %>
	    <div id="error_explanation" class="error-box bg-danger">
	      <h4 class="text-warning"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

	      <ul>
	      <% @post.errors.full_messages.each do |message| %>
	        <li class="text-warning"><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	<% end %>


	<div class="form-group">
		<%= label_tag :title, "Post Title: " %>
		<%= f.text_field(:title, :class =>"form-control") %>
	</div>
  	<div class="form-group">
  		<%= f.cktext_area :content, :class => 'ckeditor', :id => 'post_content', :rows => 25, :cols => 40, :ckeditor => {:language => 'en', :uiColor => '#AADC6E', :toolbar => 'mini'}  %>
  	</div>
  
  
  	<div class="form-group">
		<%=link_to 'Cancel', profile_path(current_user.id), :class => "btn btn-info" %>
		<%= f.submit :class => "btn btn-info" %>
	</div>
<% end %>

