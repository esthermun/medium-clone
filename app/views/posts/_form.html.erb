<%= form_for @post, :html => { :multipart => true } do |f| %>
	<% if @post.errors.any? %>
	    <div id="error_explanation" class="error-box bg-danger">
	      <h4 class="text-warning"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

	      <ul>
	      <% @post.errors.full_messages.each do |message| %>
	        <li class="text-warning"><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	<div class="form-group">
		<%= label_tag :title, "Post Title: " %>
		<%= f.text_field(:title, :class =>"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag :content, "Content: " %>
		<%= f.text_area(:content, :class => "form-control", :rows => "15") %>
	</div>
	<div class="form-group">
		<%= label_tag :image, "Add images: " %>
		<%= f.file_field :image %>
	</div>
	<div class="form-group">
		<%=link_to 'Cancel', profile_path(current_user.id), :class => "btn btn-info" %>
		<%= f.submit :class => "btn btn-info" %>
	</div>
<% end %>