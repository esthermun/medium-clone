<%# @post.inspect %>
<%= link_to "Back", my_posts_path, :class => "btn btn-info" %>

<div class="row">
	<div class="col-xs-12 col-md-12">
		<h1>Full article page</h1>
		<article class="post">
			<% if @post.image.exists? %>
				<%= image_tag @post.image.url %>
			<% end %>

			<h2>
				<%= @post.title %>
			</h2>
			
			<p>	
				Posted <%= time_ago_in_words(@post.created_at)%> ago
			</p>

			<p class="lead">
				By: <%= image_tag @profile.avatar.url(:thumb) %>
						<%= @profile.username %>
			</p>

			<div class="content">
				<%= @post.content %> 
			</div>
		
			<div class="userBtns">
				<% if user_signed_in? && current_user.id === @post.user.id %>
					<%= link_to "Edit", edit_post_path, :class => "btn btn-info" %>
				<% end %>
				
			</div>
		</article>

	</div>

</div>

