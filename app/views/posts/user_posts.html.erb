<h1>Manage my posts</h1>

<%= @posts.inspect %>


 <div class="row">
	<div class="col-xs-12 col-md-12">
		<% @posts.each do |post| %>
			<article>
				<h2>
					<%= post.title %>
				</h2>
				
				<p>	
					<%= post.updated_at%>
				</p>

				<p class="lead">
					By: User <%= post.user_id %>
				</p>

				<div class="content">
					<%= post.content %> 
				</div>
			
				<div class="userBtns">
					<% if current_user %>
						<%= link_to "Edit", edit_post_path(post.id), :class => "btn btn-info" %>
					<% end %>
					<%= link_to "Show", post_path(post.id), :class => "btn btn-info" %>
				</div>

			</article>
		<% end %> 
	</div>
</div>

<div class="linkBtns">
	<div class="row">
		<div class="col-xs-12 col-md-12">
			<%# if current_user %>
			<%# link_to "Edit", edit_post_path, :class => "btn btn-info" %>
			
			<%# link_to "Manage My Posts", my_posts_path, :class => "btn btn-info" %>
			<%# else %>
			<%# link_to "All Posts", index_path, :class => "btn btn-info" %>
			<%= link_to "Home", root_path, :class => "btn btn-info" %>

			<%# end %>
		</div>
	</div>
</div>
	