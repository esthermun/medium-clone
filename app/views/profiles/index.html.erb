<h1>Showing all Users</h1>


<% @profiles.each do |profile| %>
	<div class="media">
		<div class="media-left">
			<%= image_tag profile.avatar.url(:thumb) %>
		</div>
		<div class="media-body">
			<h4 class="media-heading">
				<%= profile.name %> <span>aka <%= profile.username %></span>
			</h4>
			<p>Member since <%= time_ago_in_words(profile.created_at) %>  ago</p>
			<p><%= truncate(profile.description, :length => 50) %></p>
		</div>
	</div>

<% end %>


<%= link_to "Home", root_path %>

