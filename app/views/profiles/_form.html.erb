<%= form_for @profile, :html => { :multipart => true } do |f| %>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	
	<div class="form-group">
		<%= label_tag :name, "Your Name: " %>
		<%= f.text_field(:name, :class =>"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag :username, "Username: " %>
		<%= f.text_field(:username, :class => "form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag :description, "About: " %>
		<%= f.text_area(:description, :class => "form-control", :placeholder => "Tell us about yourself...", :rows => "8") %>
	</div>
	<div class="form-group">
		<%= label_tag :avatar, "Add your face: " %>
		<%= f.file_field :avatar %>
	</div>
	<div class="form-group">
		<%=link_to 'Cancel', profile_path(current_user.id), :class => "btn btn-info" %>
		<%= f.submit :class => "btn btn-info" %>
	</div>
	
<% end %>