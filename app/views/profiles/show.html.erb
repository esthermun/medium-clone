<%# @posts.inspect %>
<!-- shows user profile and user posts -->
<div class="row">
	<div class="col-xs-12 col-md-12">

		<h1> <%= @profile.username %>'s Profile</h1>

		<div class="media">
			<div class="media-left">
				<%= image_tag @profile.avatar.url(:medium), :class => "img-rounded"  %>
			</div>

			<div class="media-body">
				<table class="table table-responsive">
					<tr>
						<th>Name: </th>
						<td><%= @profile.name %></td>
					</tr>
					<tr>
						<th>Username:</th>
						<td><%= @profile.username %></td>
					</tr>
					<tr>
						<th>About Me: </th>
						<td><%= @profile.description %></td>
					</tr>
					
				</table>
			</div>
		</div>

		<div class="pull-right userBtn">
			<% if user_signed_in? && current_user.id === @profile.user_id %>
				<%= link_to "Edit", edit_profile_path, :class => "btn btn-info" %>
			<% end %>
		</div>
	</div>
</div>

<%= render "posts/user_posts" %>


