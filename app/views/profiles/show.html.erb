
<%= link_to "Home", root_path, :class => "btn btn-info" %>

<%# @posts.inspect %>

<h1> <%= @profile.username %>'s Profile</h1>

<div class="media">
	<div class="media-left">
		<%= image_tag @profile.avatar.url(:medium), :class => "img-rounded"  %>
	</div>

	<div class="media-body">
		<table class="table table-responsive">
			<tr>
				<th>Name: </th>
				<td><%= @profile.name %></td>
			</tr>
			<tr>
				<th>Username:</th>
				<td><%= @profile.username %></td>
			</tr>
			<tr>
				<th>About Me: </th>
				<td><%= @profile.description %></td>
			</tr>
			
		</table>
	</div>
</div>

<div class="pull-right userBtn">
	<% if user_signed_in? && current_user.id === @profile.user_id %>
		<%= link_to "Edit", edit_profile_path, :class => "btn btn-info" %>
	<% end %>
</div>
		

<!-- table list for user - only seen by the user only for editing-->
<table class="table table-striped">
	<tr>
		<th>Title</th>
		<th>Created at</th>
		<th>Updated at</th>
		<th>Comments</th>
		<th></th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><a href="<%= post_path(post.id) %>"><%= post.title %> </a></td>
			<td><%= post.created_at %></td>
			<td><%= post.updated_at %></td>
			<td>comments count</td>
			<td><%= link_to "Edit", edit_post_path(post.id) %> delete</td>
		</tr>
	<% end %>
</table>

